---
import CldImage from "../CldImage.astro";
---

<section
  x-data="{ isOpen: false }"
  class="w-full min-h-screen bg-white dark:bg-gray-900"
>
  <div class="container relative flex flex-col min-h-screen px-6 py-8 mx-auto">
    <section class="flex items-center flex-1">
      <div class="flex flex-col w-full">
        <h1
          class="text-5xl font-extrabold text-center lg:text-7xl 2xl:text-8xl"
        >
          <span
            class="text-transparent bg-gradient-to-br bg-clip-text from-teal-500 via-indigo-500 to-sky-500 dark:from-teal-200 dark:via-indigo-300 dark:to-sky-500"
          >
          INTERNET CON LA MÁS ALTA TECNOLOGÍA POR FIBRA ÓPTICA
          </span>

          <span
            class="text-transparent bg-gradient-to-tr bg-clip-text from-blue-500 via-pink-500 to-red-500 dark:from-sky-300 dark:via-pink-300 dark:to-red-500"
          >
            Atacames - Tonsupa
          </span>
        </h1>
      </div>
    </section>

    <section>
      <div class="container flex flex-col px-6 py-10 mx-auto space-y-6 lg:h-[32rem] lg:py-16 lg:flex-row lg:items-center">
          <div class="w-full lg:w-1/2">
              <div class="lg:max-w-lg">
                  <h2 class="text-3xl font-semibold tracking-wide text-gray-800 dark:text-white lg:text-4xl">
                    ¡Una empresa Atacameña para los Atacameños!
                  </h2>
    
                  <div class="mt-8 space-y-5">
                      <p class="flex items-center -mx-2 text-gray-700 dark:text-gray-200">
                          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mx-2 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
    
                          <span class="mx-2">Precio fijo, sin sorpresas en tu factura</span>
                      </p>
    
                      <p class="flex items-center -mx-2 text-gray-700 dark:text-gray-200">
                          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mx-2 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
    
                          <span class="mx-2">Soporte técnico en la misma ciudad</span>
                      </p>
    
                      <p class="flex items-center -mx-2 text-gray-700 dark:text-gray-200">
                          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mx-2 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
    
                          <span class="mx-2">$0 costo de instalación</span>
                      </p>
                  </div>
              </div>
    
              <div class="w-full mt-8 bg-transparent border rounded-md lg:max-w-sm dark:border-gray-700 focus-within:border-blue-400 focus-within:ring focus-within:ring-blue-300 dark:focus-within:border-blue-400 focus-within:ring-opacity-40">
                  <div class="flex flex-col lg:flex-row">
                      <span class="flex items-center lg:justify-evenly justify-center flex-1 h-10 px-4 py-2 m-1 text-gray-700 placeholder-gray-400 bg-transparent border-none appearance-none dark:text-gray-200 focus:outline-none focus:placeholder-transparent focus:ring-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-whatsapp mx-1" viewBox="0 0 16 16">
                          <path d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z"/>
                        </svg>
                        098-98-37-555
                      </span>
                      <button type="button" class="h-10 px-4 py-2 m-1 text-white transition-colors duration-300 transform bg-green-900 rounded-md hover:bg-green-500 focus:outline-none focus:bg-blue-400">
                        Contrata ahora !
                      </button>
                  </div>
              </div>
          </div>
    
          <div class="flex items-center justify-center w-full h-96 lg:w-1/2">
              <CldImage
            class="object-cover w-full h-full mx-auto rounded-md lg:max-w-2xl"
            src="naptelsa-web/index/foto_principal"
            alt="logo de Naptel a colores"
          />
          </div>
      </div>
    </section>

  </div>
</section>



